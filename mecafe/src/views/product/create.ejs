
<!-- * Encabezado de la pagina -->
<%- include ("../partials/head") %>

<title>Creacion de un producto</title>
</head>

<body class="bodyHome">
    
    <!-- Cabecera -->
    <%- include ("../partials/header") %>

    <!-- Contenido -->
    <section class="generalHome">

        <div class="createProduct">

            <form class="createProduct__containerForm" enctype="multipart/form-data" action="/product" method="POST">

                <div class="registerForm__titleForm">
                    <h2>¿Necesitas crear un producto?</h2>
                    <h3>Adelante! 😀</h3>
                </div>

                <div>
                    <input class="createProduct__inputBox" type="text" name="nameProduct" id="nameProduct" required placeholder=" ">
                    <label for="nameProduct" class="createProduct__labelBox">Nombre del Producto:</label>
                </div>

                <div>
                    <input class="createProduct__inputBox" type="text" name="weightProduct" id="weightProduct" required placeholder=" ">
                    <label for="weightProduct" class="createProduct__labelBox">Peso del producto (Gramos):</label>
                </div>

                <div>
                    <input class="createProduct__inputBox" type="text" name="priceProduct" id="priceProduct" required placeholder=" ">
                    <label for="priceProduct" class="createProduct__labelBox">Precio (USD):</label>
                </div>

                <div>
                    <textarea class="createProduct__inputBox createProduct__textArea" name="descriptionProduct" id="descriptionProduct"></textarea>
                    <label for="descriptionProduct" class="createProduct__labelBox">Descripcion del producto:</label>
                </div>


                <div>
                    <select class="createProduct__inputBox" name="brandProduct" id="brandProduct"> 
    
                        <% brands.forEach( element => { %>
                            <option>  <%= element.name %> </option>
                        <% }); %>

                    </select> 

                    <label for="brandProduct" class="createProduct__labelBox">Marca del Producto:</label>
                </div>

                <div>
                    <select class="createProduct__inputBox" name="categoryProduct" id="categoryProduct"> 

                        <% typeGrindings.forEach( element => { %>
                            <option> <%= element.name %> </option>
                        <% }); %>

                    </select> 

                    <label for="categoryProduct" class="createProduct__labelBox">Categoria:</label>
                </div>

                <div>
                    <select class="createProduct__inputBox" name="ratingProduct" id="ratingProduct"> 
                            <option label=⭐>1</option>
                            <option label=⭐⭐>2</option>
                            <option label=⭐⭐⭐>3</option>
                            <option label=⭐⭐⭐⭐>4</option>
                            <option label=⭐⭐⭐⭐⭐>5</option>
                    </select> 

                    <label for="ratingProduct" class="createProduct__labelBox">Rating:</label>
                </div>


                <div>
                    <input class="createProduct__inputBox" type="file" name="imageProduct" id="imageProduct" accept=".JPG,.PNG">
                    <label for="imageProduct" class="createProduct__labelBox">Imagen (JPG, PNG):</label>
                </div>

                <section class="btn createProduct-btn">
                    <button type="submit" class="submit">Enviar</button>
                    <button type="reset" class="reset">Restablecer</button>
                </section>



            </form>

        </div>

    </section>

    <!-- Pie de Pagina -->
    <%- include("../partials/footerNico") %>


</body>
</html>
