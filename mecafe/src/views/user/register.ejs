<!-- Encabezado de la pagina -->
<%- include("../partials/head") %>
    
    <title>Formulario de Registro</title>
</head>
<body class="bodyHome"> 

    <!-- Cabecera -->
    <%- include("../partials/header") %>

    <!-- Contenido -->
    <section class="generalHome">
        
        <div class="registerForm__container-form">
