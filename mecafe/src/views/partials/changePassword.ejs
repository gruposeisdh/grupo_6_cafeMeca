<div class="changePassword__container modal__container" id="modalPassword">
    <div class="modal__header">
        <h3>Modificar Contraseña</h3>
        <a onclick="closeModal('modalPassword')"><i class="fas fa-times"></i></a>
    </div>  
    <form action="">
        <div class="form-group">
            <label for="password">Contraseña<span>*</span></label><br>
            <input type="password" name="password" placeholder="*******">
        </div>
        <div class="form-group errorCampoDiv">
            <label for="password">Confirmar Contraseña<span>*</span></label><br>
            <input type="newPassword" name="newPassword" placeholder="*******">    
            <p class="modal__formError">contraseña inválida, inténtalo nuevamente.</p>  
        </div>          
        <input type="button" value="Guardar">
    </form> 
</div>
