<div class="login__container modal__container" id="modalLogin" <%= locals.errorsLogin || locals.openLogin ? 'active' : ''%> >
    <div class="modal__header">
        <h2>Ingresar</h2>
        <a onclick="closeModal('modalLogin')"><i class="fas fa-times"></i></a>
    </div>
    <form action="/user/login" method="post" id="formLogin">
        <input type="hidden" name="route" id="inputRouteLogin" />    
        <div class="form-group form-group-email">
            <label for="email">Correo electrónico<span>*</span></label><br>
            <input type="email" name="email" placeholder="example@email.com" id="emailLogin">
            <p class="modal__formError <%= locals.errorsLogin && locals.errorsLogin.email ? '' : 'display-none' %> "><%= locals.errorsLogin && locals.errorsLogin.email ? locals.errorsLogin.email.msg : ''%></p>
        </div>
        <div class="form-group form-group-pass">
            <label for="password">Contraseña<span>*</span></label><br>
            <input type="password" name="password" placeholder="*******" id="passLogin">  
            <p class="modal__formError <%= locals.errorsLogin && locals.errorsLogin.password ? '' : 'display-none' %> "><%= locals.errorsLogin && locals.errorsLogin.password ? locals.errorsLogin.password.msg : ''%></p>
            <p class="modal__formError <%= locals.errorsLogin && locals.errorsLogin.errorPass ? '' : 'display-none' %> "><%= locals.errorsLogin && locals.errorsLogin.errorPass ? locals.errorsLogin.errorPass : ''%></p>           
        </div>
            
        <div class="text-center">
            <input type="checkbox" name="remember">
            <label for="">Recordarme</label>
            <a class="red decoration-none" href="http://">¿Olvidaste tu contraseña?</a>
        </div>           
        <input type="submit" value="Ingresar">
        <p class="text-center">¿No estás registrado? <a class="red decoration-none" href="/user/register">Crear Cuenta</a></p> 
        <div class="login_logo">
            <img src="/img/logoMecafe2.png" class="logo" />
        </div>
    </form>
</div>